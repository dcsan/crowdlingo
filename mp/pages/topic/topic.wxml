<view class='ctr'>
  <view class='title'>
  {{topic.title}}
  </view>

  <view class='subtitle'>
  {{topic.subtitle}}
  </view>

  <view class='inline-image'>
    <image src='{{topic.image.path}}' />
  </view>

  <tag-cloud topic="{{topic}}">
  </tag-cloud>

  <view class='share-button'>
    <view bindtap="onShareAppMessage" class='btn-row' >
      <button
        class='sharebtn zat-btn row-btn fill-btn left-align'
        open-type="share" type="primary">
        Share this with your Group!
      </button>
    </view>
  </view>

</view>