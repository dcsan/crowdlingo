
.tag-cloud-box {
  background: #CCF;
  border: 1px solid black;
  padding: 10px;
  line-height: 40px;
}

.tag {
  font-size: 14px;
  padding: 5px;
  border: 1px solid #666;
  border-radius: 10px;
  line-height: 30px;
  display: inline;  
  background: white;
  margin: 0 5px;
}

.score {
  padding: 0 5px;
}
.score::before {
  content: '('
}
.score::after {
  content: ' pts)'
}

.exit {
  border-radius: 50%;
  display: inline-block;
  width: 1.5em;
  height: 1.5em;
  background: red;
  color: #eee;
}

.hidden {
  display: none;
}
